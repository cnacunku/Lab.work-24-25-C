#define _USE_MATH_DEFINES
#include <iostream>
#include <cmath>
#include <locale>
using namespace std;

int main() {
	setlocale(LC_CTYPE, "RUS");
	
	int i, j, n;
	float s = 0.0, sum = 0.0; //добавляем промежуточное вычисление "s"; меняем тип данных суммы на число с плавающей точкой
	cout << "Введите n: "; // добавляем вспомогательное сообщение для пользователя
	cin >> n;
	// Ставим фигурные скобки после for
	for (i = 1; i <= n; ++i) { // создаем ограничение, что позволяет циклам завершаться
		for (j = 1; j <= n; ++j) { 
			s = 1.0 / (i + 2 * j); // убираем двоеточие перед "="; заменяем 1 на 1.0, гарантируя, что деление будет выполнено с плавающей точкой, и результат будет правильным
			sum += s; // добавляем вычисление всей суммы
		}
	}
	cout << sum << endl; 
}
