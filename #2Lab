#define _USE_MATH_DEFIHES
#include <iostream>
#include <cmath>
#include <locale>
#include <string>

#define N 10

#define I 5
#define Q 4

using namespace std;

int main() {
	setlocale(LC_CTYPE, "RUS");

	cout << "\nЗадание 1" << endl;
	cout << "\nВвод элементов массива с клавиатуры:" << endl;
	float array[N];

	for (int i = 0; i < N; i++) {
		cin >> array[i];
	}

	cout << "\nВывод элементов массива:" << endl;
	for (int i = 0; i < N; i++) {
		cout << array[i] << endl;
	}
	cout << "\nПоиск максимального элемента массива:" << endl;
	float max;
	max = array[0];

	for (int i = 0; i < N; i++) {
		if (array[i] > max)
			max = array[i];
	}

	cout << max << endl;

	cout << "\nПоиск среднего арифметического значения положительных элементов:" << endl;
	int count = 0;
	float sum_pol = 0.0, mid = 0.0;
	for (int i = 0; i < N; i++) {
		if (array[i] > 0) {
			sum_pol += array[i];
			count++;
		}
	}

	mid = sum_pol / count;

	cout << mid << endl;

	cout << "\nВывод отрицательных элементов в обратном порядке:" << endl;
	for (int i = N - 1; i > 0; i--) {
		if (array[i] < 0)
			cout << array[i] << endl;
	}


	cout << "\nЗадание 2" << endl;

	int arr[I][Q];

	for (int i = 0; i < I; i++)
		for (int j = 0; j < Q; j++) {
			cout << "arr[" << i << "][" << j << "] : ";
			cin >> arr[i][j];
		}
	for (int i = 0; i < I; i++) {
		for (int j = 0; j < Q; j++) {
			if (arr[i][j] >= 10)
				cout << arr[i][j] << " ";
			else
				cout << arr[i][j] << "  ";
		}
		cout << endl;
	}





}

