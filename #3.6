#include <iostream>
using namespace std;

int main() {
	setlocale(LC_CTYPE, "RUS");
	
	int fac = 1, n; // инициализируем fac и n
	float s = 0.0, sum = 0.0, zn=0.0; // инициализируем сумму, промежуточную сумму, результат деления

	cout << "Введите n: "; // добавляем вспомогательное сообщение для пользователя
	cin >> n; // Вводим n

	// Добавляем фигрурные скобки для функций for
	for (int k = 1; k <= 10; ++k) { // создаем ограничение, что позволяет циклам завершаться
		for (int n = 1; n <= k; ++n) {
			s = s + sin(k * n); // Исправляем выражение внутри sin()
		}
		fac *= k;
		zn= s / fac;
		sum = sum + zn; // Добавляем к общей сумме
	}
	cout << sum << endl; // Добавляем вывод результата
} 
